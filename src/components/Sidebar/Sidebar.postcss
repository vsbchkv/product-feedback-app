@import '../../assets/styles/helpers/index.postcss';

@layer components {
  .sidebar {
    --sidebar-width: 72.27vw;
    --shadow-color: rgb(0 0 0 / 0%);

    display: grid;
    grid-area: content;
    align-content: start;
    row-gap: rem(24);
    width: var(--sidebar-width);
    padding: rem(24);
    background-color: var(--background-primary);
    justify-self: end;
    transform: translateX(var(--sidebar-width));
    box-shadow: calc(0vw - (100vw - var(--sidebar-width))) 0 0 0 var(--shadow-color);
  }
}

@layer variations {
  .sidebar--active {
    --shadow-color: rgb(0 0 0 / 50%);

    z-index: 9;
    transform: none;
    transition:
      transform .3s ease,
      box-shadow .3s ease .3s;
  }
}
